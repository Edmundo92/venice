{
  "name": "@juntossomosmais/venice-react",
  "repository": "https://github.com/juntossomosmais/venice",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "start-storybook -p 9009 -c .storybook",
    "build": "rollup -c",
    "test": "react-scripts test",
    "test:ci": "cross-env CI=true react-scripts test --bail --passWithNoTests --env=jsdom",
    "build-storybook": "build-storybook -c .storybook -o ../../dist/react",
    "loki-test": "loki test",
    "loki-update": "loki update",
    "prepublish": "yarn test:ci && yarn build"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@storybook/preset-create-react-app": "^2.1.1",
    "@storybook/react": "^5.3.17",
    "@testing-library/react": "^10.0.1",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@venice/core": "^0.0.0",
    "@venice/styles": "^0.0.0",
    "autoprefixer": "^9.7.5",
    "eslint-plugin-react": "^7.19.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-is": "^16.13.1",
    "react-scripts": "3.4.1",
    "rollup": "^2.3.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-typescript2": "^0.27.0"
  },
  "browserslist": [
    "defaults"
  ],
  "loki": {
    "reactUri": "file:../../dist/react",
    "diffingEngine": "gm",
    "requireReference": true,
    "chromeDockerWithoutSeccomp": true,
    "chromeTolerance": 0.8,
    "chromeFlags": "--headless --disable-gpu --hide-scrollbars --no-sandbox",
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      }
    }
  }
}
