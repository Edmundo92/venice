{
  "name": "venice",
  "repository": "https://github.com/juntossomosmais/venice",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start": "lerna run start",
    "test": "run-p test:*",
    "test:react": "yarn workspace react-ds test",
    "test:vue": "yarn workspace vue-ds test",
    "deploy:storybook": "yarn build:storybook && gh-pages-deploy",
    "deploy:storybook-clean": "rimraf README.md packages package.json",
    "build:storybook": "lerna run build-storybook",
    "loki-test": "lerna run loki-test",
    "loki-update": "lerna run loki-update",
    "lint": "eslint . --ext js,ts,jsx,tsx",
    "lint:css": "stylelint '**/*.scss'",
    "format": "prettier-eslint --write $PWD/'**/*.{js,ts,jsx,tsx,vue}' $PWD/'*.{js,ts}' && stylelint '**/*.scss' --fix && eslint . --ext js,ts,jsx,tsx,vue --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.1.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-loader": "^8.1.0",
    "commitlint": "^8.3.5",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-mdx": "^1.6.8",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint": "^6.8.0",
    "gh-pages-deploy": "^0.5.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "loki": "^0.20.3",
    "npm-run-all": "^4.1.5",
    "prettier-eslint-cli": "^5.0.0",
    "prettier-eslint": "^9.0.1",
    "prettier": "^1.19.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint": "^13.2.1",
    "ts-jest": "^25.2.1",
    "typescript": "~3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "yarn format",
      "yarn test"
    ]
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "post": [
      "deploy:storybook-clean"
    ]
  }
}
