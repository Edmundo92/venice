{
	"name": "venice",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"bootstrap": "lerna bootstrap --use-workspaces",
		"start": "run-p start:*",
		"start:react": "yarn workspace react-ds start",
		"start:vue": "yarn workspace vue-ds start",
		"lint": "eslint . --ext js,ts,jsx,tsx",
		"lint:css": "stylelint '**/*.scss'",
		"format": "prettier-eslint --write $PWD/'**/*.{js,ts,jsx,tsx,vue,mdx}' $PWD/'*.{js,ts}' && stylelint '**/*.scss' --fix && eslint . --ext js,ts,jsx,tsx,vue --fix"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^2.24.0",
		"@typescript-eslint/parser": "^2.24.0",
		"commitlint": "^8.3.5",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-mdx": "^1.6.8",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.3",
		"lerna": "^3.20.2",
		"lint-staged": "^10.0.8",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"prettier-eslint": "^9.0.1",
		"prettier-eslint-cli": "^5.0.0",
		"stylelint": "^13.2.1",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-order": "^4.0.0",
		"typescript": "~3.7.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,vue}": [
			"eslint . --ext js,ts,jsx,tsx --fix",
			"prettier-eslint --write $PWD/'**/*.{js,ts,jsx,tsx,vue,mdx}' $PWD/'*.{js,ts}'",
			"stylelint '**/*.scss' --fix"
		]
	}
}
