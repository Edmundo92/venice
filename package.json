{
  "name": "venice",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "start": "run-p start:*",
    "start:react": "yarn workspace react-ds start",
    "start:vue": "yarn workspace vue-ds start",
    "deploy:storybook": "yarn build:storybook && gh-pages-deploy",
    "deploy:storybook-clean": "rimraf README.md packages package.json",
    "build:storybook": "run-p build-storybook:*",
    "build-storybook:react": "yarn workspace react-ds build-storybook",
    "build-storybook:vue": "yarn workspace vue-ds build-storybook",
    "loki-test": "run-p loki-test:*",
    "loki-test:react": "yarn workspace react-ds loki-test",
    "loki-test:vue": "yarn workspace vue-ds loki-test",
    "loki-update": "run-p loki-update:*",
    "loki-update:react": "yarn workspace react-ds loki-update",
    "loki-update:vue": "yarn workspace vue-ds loki-update",
    "lint": "eslint . --ext js,ts,jsx,tsx",
    "lint:css": "stylelint '**/*.scss'",
    "format": "prettier-eslint --write $PWD/'**/*.{js,ts,jsx,tsx,vue}' $PWD/'*.{js,ts}' && stylelint '**/*.scss' --fix && eslint . --ext js,ts,jsx,tsx,vue --fix"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-mdx": "^1.6.8",
    "eslint-plugin-prettier": "^3.1.2",
    "gh-pages-deploy": "^0.5.1",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "loki": "^0.20.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "typescript": "~3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "eslint . --ext js,ts,jsx,tsx --fix",
      "prettier-eslint --write $PWD/'**/*.{js,ts,jsx,tsx,vue}' $PWD/'*.{js,ts}'",
      "stylelint '**/*.scss' --fix"
    ]
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "post": [
      "deploy:storybook-clean"
    ]
  }
}
